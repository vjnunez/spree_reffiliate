<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= Spree.t(:editing_affiliate, scope: :affiliate_confirmation) %></h3>
    </div>
    <div class="panel-body">
      <%= render partial: 'spree/shared/error_messages', locals: { target: @user } %>

      <%= form_for Spree::User.new, as: @user, url: spree.affiliate_confirmations_path, method: :post do |f| %>
        <%= render partial: 'spree/shared/user_form', locals: { f: f } %>
        <%= hidden_field_tag :activation_token, @affiliate.activation_token %>
        <p>
          <%= f.submit Spree.t(:update), class: 'btn btn-primary' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
